{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <h1>Détails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ log.username }}</td>
            </tr>
            <tr>
                <th>Datelog</th>
                <td>{{ log.datelog ? log.datelog|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Logtype</th>
                <td>{{ log.logtype }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('log_index') }}">Retour à la list</a>

    {% if isEditable is defined and isEditable %}
        <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>
        {{ include('log/_delete_form.html.twig') }}
    {% endif %}

    
{% endblock %}
